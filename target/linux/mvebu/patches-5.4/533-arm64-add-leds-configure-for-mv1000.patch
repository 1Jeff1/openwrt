--- a/drivers/leds/leds-glmv1000.c	1969-12-31 16:00:00.000000000 -0800
+++ b/drivers/leds/leds-glmv1000.c	2019-06-05 20:27:57.958063703 -0700
@@ -0,0 +1,82 @@
+/*
+ * LEDs device register for GL.inet mv1000
+ *
+ */
+
+#include <linux/kernel.h>
+#include <linux/init.h>
+#include <linux/platform_device.h>
+#include <linux/leds.h>
+#include <linux/err.h>
+#include <linux/io.h>
+#include <linux/nsc_gpio.h>
+//#include <linux/mv1000_gpio.h>
+#include <linux/module.h>
+
+static struct gpio_led gpio_leds[] = {
+	{
+		.name = "gl-mv1000:green:vpn",
+		.gpio = 487,
+		.default_state = LEDS_GPIO_DEFSTATE_OFF,
+		.active_low = 1,
+	},
+	{
+		.name = "gl-mv1000:green:wifi",
+		.gpio = 488,
+		.default_state = LEDS_GPIO_DEFSTATE_OFF,
+		.active_low = 1,
+	},
+	{
+		.name = "gl-mv1000:green:power",
+		.gpio = 489,
+		.default_state = LEDS_GPIO_DEFSTATE_ON,
+		.active_low = 1,
+	},
+
+
+};
+
+static void led_dev_release(struct device *dev)
+{
+
+}
+
+static struct gpio_led_platform_data gpio_led_info = {
+	.leds		= gpio_leds,
+	.num_leds	= ARRAY_SIZE(gpio_leds),
+};
+
+static struct platform_device leds_gpio = {
+	.name = "leds-gpio",
+	.id = -1,
+	.dev = {
+        	.platform_data = &gpio_led_info,
+        	.release = led_dev_release,
+    	},
+};
+
+static int __init glmv1000_led_init(void)
+{
+	int ret;
+	
+	ret = platform_device_register(&leds_gpio); 
+
+	if(ret){
+		pr_err("Error registering mv1000 leds deviecs\n");
+		platform_device_unregister(&leds_gpio);
+	}
+
+	return ret;
+}
+
+static void __exit glmv1000_led_exit(void)
+{
+	platform_device_unregister(&leds_gpio);
+}
+
+module_init(glmv1000_led_init);
+module_exit(glmv1000_led_exit);
+
+MODULE_AUTHOR("li.zhang <li.zhang@gl-inet.com>");
+MODULE_DESCRIPTION("GL.inet MV1000 LED");
+MODULE_LICENSE("GPL");
